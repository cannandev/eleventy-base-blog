  <textarea name="message" id="message" cols="30" rows="10" class="border p-4 mb-4 font-serif"></textarea>
  <label class="" for="author">Author</label>
  <input type="text" name="author" class="border p-4 mb-4 font-serif">
  <label class="" for="title">Title</label>
  <input type="text" name="title" class="border p-4 mb-4 font-serif">
  <label class="" for="page">Page number</label>
  <input type="number" name="page" maxlength="4" class="w-1/6 border p-4 mb-4 font-serif">
  <label class="" for="reftype">Reference type</label>
  <select name="reftype" id="reftype" class="border p-4 mb-4">
