  <input type="url" name="link" class="border p-4 mb-4">
  <label class="font-semibold" for="subject">Subject tags</label>
  <input type="text" name="subject" class="border p-4 mb-4">
  <button type="reset" class="btn">Reset</button>
  <button type="submit" class="btn">Submit</button>
</form>
