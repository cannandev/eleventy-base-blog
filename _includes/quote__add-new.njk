  <input type="url" name="link" class="border p-4 mb-4 font-serif">
  <label class="" for="subject">Subject tags</label>
  <input type="text" name="subject" class="border p-4 mb-4 font-serif">
  <label class=" text-gray-500" for="date">Date (auto)</label>
  <input disabled type="date" name="date" class="w-1/3 border p-4 mb-4 text-gray-500 font-serif">
  <div class="flex justify-end">
    <button type="reset" class="btn">Reset</button>
    <button type="submit" class="btn">Submit</button>
  </div>
</form>
