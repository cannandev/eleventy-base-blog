<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="/style.css?v={% version %}" />
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml"
      title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json"
      title="{{ metadata.title }}">
    <link rel="icon" class="js-site-favicon" type="image/svg+xml" href="/img/favicon.ico">
  </head>

  <body>
    <div class="relative bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <a href="#main-content" alt="Skip link" class="sr-only focus:not-sr-only">Skip to main content</a>
        <header>
          {% include "header.njk" %}
        </header>
        <main id="main-content" {% if templateClass %} class="{{ templateClass }}" {% endif %}>
          {{ content | safe }}
        </main>
        <footer>
          {% include "footer.njk" %}
        </footer>
      </div>
    </div>
  </body>

</html>
