<h1 class="page-title">
  <a href="{{ '/' | url }}">
    <img src="/img/logo-black.png" alt="{{ metadata.title }}">
	</a>
  </h1>
  <ul class="nav">
    {%- for entry in collections.all | eleventyNavigation %}
      <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
        <a href="{{ entry.url | url }}">{{ entry.title }}</a>
				{% if entry.title == "Articles" %}
				<ul class="nav-item__children">
					{%- for article in collections.all | eleventyNavigation("Articles") %}
					<li><a href="{{ article.url | url }}">{{ article.title }}</a></li>
					{%- endfor %}
				</ul>
				{% endif %}
      </li>
    {%- endfor %}
  </ul>
