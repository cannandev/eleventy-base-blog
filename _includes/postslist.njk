{% for post in postslist | reverse %}
  <article class="postlist-item">
		<span>category label</span>
		<h2><a href="{{ post.url | url }}" class="postlist-link">
      {% if post.data.title %}
        {{ post.data.title }}
      {% else %}
        <code>{{ post.url }}</code>
      {% endif %}
    </a></h2>
		<ul>
			<li><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></li>
			<li>111 Shares</li>
			<li>5 min read</li>
		</ul>
		<p>Provident temporibus adipisci ipsam non praesentium ea, mollitia reiciendis repellat labore, consequatur blanditiis nesciunt, libero voluptas odio...</p>
	</article>
{% endfor %}
